---
const projects = [
  {
    title: "E-Commerce Rebrand",
    category: "Design & Development",
    color: "from-pink-500 to-rose-500",
  },
  {
    title: "Fintech Dashboard",
    category: "Product Design",
    color: "from-blue-500 to-cyan-500",
  },
  {
    title: "AI Startup Landing",
    category: "Web Development",
    color: "from-emerald-500 to-teal-500",
  },
  {
    title: "Luxury Real Estate",
    category: "Full Stack",
    color: "from-purple-500 to-indigo-500",
  }
];
---

<section id="work" class="py-24 bg-brand-black/50">
    <div class="max-w-7xl mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex flex-col md:flex-row justify-between items-end mb-16">
            <div>
                <span class="text-purple-500 font-semibold tracking-wider text-sm uppercase">Our Portfolio</span>
                <h2 class="text-4xl md:text-5xl font-bold mt-2">Selected Work</h2>
            </div>
            <a href="#" class="hidden md:inline-flex items-center text-gray-400 hover:text-white transition-colors mt-4 md:mt-0">
                View all projects <span class="ml-2">&rarr;</span>
            </a>
        </div>

        <div class="grid grid-cols-1 md:grid-cols-2 gap-8">
            {projects.map((project) => (
                <div class="group relative overflow-hidden rounded-2xl cursor-pointer">
                    <!-- Image Placeholder -->
                    <div class={`w-full h-80 bg-gradient-to-br ${project.color} opacity-80 group-hover:opacity-100 transition-all duration-500 transform group-hover:scale-105`}></div>

                    <!-- Content Overlay -->
                    <div class="absolute inset-0 bg-linear-to-t from-black/80 to-transparent flex flex-col justify-end p-8">
                        <span class="text-gray-300 text-sm mb-2 opacity-0 group-hover:opacity-100 transform translate-y-4 group-hover:translate-y-0 transition-all duration-300 delay-100">{project.category}</span>
                        <h3 class="text-2xl font-bold text-white transform translate-y-4 group-hover:translate-y-0 transition-all duration-300">{project.title}</h3>
                    </div>
                </div>
            ))}
        </div>

        <div class="mt-12 text-center md:hidden">
            <a href="#" class="inline-flex items-center text-gray-400 hover:text-white transition-colors">
                View all projects <span class="ml-2">&rarr;</span>
            </a>
        </div>
    </div>
</section>
