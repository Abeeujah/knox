---
interface Props {
    activePage?: string;
}

const { activePage } = Astro.props;

const navLinks = [
    { name: "Our Work", href: "/our-works" },
    { name: "About Us", href: "/about" },
    { name: "Gallery", href: "#" },
    { name: "Contact", href: "/contact" },
];
---

<header
    class="fixed top-0 left-0 w-full md:h-25 bg-white z-50 flex items-center"
>
    <div class="w-full max-w-300 mx-auto px-4 sm:px-6 lg:px-8">
        <div class="flex items-center justify-between h-20">
            <a
                href="/"
                class="text-2xl font-bold no-underline text-brand-black tracking-tight"
                >NASKAXE</a
            >

            <nav class="hidden md:flex items-center gap-8">
                {
                    navLinks.map((link) => (
                        <a
                            href={link.href}
                            class:list={[
                                "text-base no-underline text-brand-black transition-colors hover:text-brand-red",
                                { "font-bold": activePage === link.name },
                            ]}
                        >
                            {link.name}
                        </a>
                    ))
                }
            </nav>

            <a
                href="#"
                class={`hidden md:block bg-brand-red
                text-white text-base font-medium no-underline
                rounded-lg w-40 p-5 text-center
                transition-colors hover:bg-red-700`}
            >
                Donate
            </a>

            <button
                id="menu-toggle"
                class="md:hidden bg-transparent border-none p-0 appearance-none text-brand-black focus:outline-none"
                aria-label="Toggle menu"
            >
                <svg
                    id="menu-open-icon"
                    class="h-7 w-7"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M4 6h16M4 12h16M4 18h16"></path>
                </svg>
                <svg
                    id="menu-close-icon"
                    class="h-7 w-7 hidden"
                    fill="none"
                    viewBox="0 0 24 24"
                    stroke="currentColor"
                >
                    <path
                        stroke-linecap="round"
                        stroke-linejoin="round"
                        stroke-width="2"
                        d="M6 18L18 6M6 6l12 12"></path>
                </svg>
            </button>
        </div>
    </div>

    <div
        id="mobile-menu"
        class="hidden md:hidden absolute top-20 left-0 w-full bg-white border-t border-gray-border shadow-lg"
    >
        <nav class="flex flex-col px-6 py-6 gap-5">
            {
                navLinks.map((link) => (
                    <a
                        href={link.href}
                        class:list={[
                            "no-underline text-base text-brand-black transition-colors hover:text-brand-red",
                            { "font-bold": activePage === link.name },
                        ]}
                    >
                        {link.name}
                    </a>
                ))
            }

            <a
                href="#"
                class="no-underline bg-brand-red text-white text-base font-medium rounded-lg px-6 py-2.5 text-center transition-colors hover:bg-red-700 mt-2"
            >
                Donate
            </a>
        </nav>
    </div>
</header>

<script>
    const toggle = document.getElementById("menu-toggle");
    const mobileMenu = document.getElementById("mobile-menu");
    const openIcon = document.getElementById("menu-open-icon");
    const closeIcon = document.getElementById("menu-close-icon");

    toggle?.addEventListener("click", () => {
        const isOpen = !mobileMenu?.classList.contains("hidden");
        mobileMenu?.classList.toggle("hidden");
        openIcon?.classList.toggle("hidden", !isOpen);
        closeIcon?.classList.toggle("hidden", isOpen);
    });
</script>
