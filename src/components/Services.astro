---
const services = [
    {
        title: "Medical Help",
        image: "/medicalhelp.png",
        description:
            "Providing essential healthcare services and medical assistance to underserved communities around the world.",
    },
    {
        title: "Education",
        image: "education.png",
        description:
            "Empowering individuals through quality education, scholarships, and learning opportunities for all.",
    },
    {
        title: "Water and Food",
        image: "waterandfood.png",
        description:
            "Ensuring access to clean water and nutritious food to combat hunger and malnutrition.",
    },
    {
        title: "Housing and Shelter",
        image: "housingandshelter.png",
        description:
            "Building safe, affordable housing and providing shelter for displaced families and communities.",
    },
];
---

<section class="bg-white py-15 md:py-16">
    <div class="mx-auto max-w-300 px-4 sm:px-16 lg:px-8">
        <p
            class="text-brand-red mb-3 text-sm font-semibold uppercase tracking-wide"
        >
            Our Services
        </p>
        <h2 class="mb-12 max-w-2xl text-4xl font-bold text-brand-black">
            Bringing Hope and Support to Every Community
        </h2>

        <div class="grid grid-cols-1 gap-8 md:grid-cols-2">
            {
                services.map((service) => (
                    <div class="px-6 py-6 border border-[#DBE1E7] rounded-2xl">
                        <img
                            class="w-full h-auto object-cover max-w-full"
                            src={service.image}
                            alt={service.title}
                        />
                        <h3 class="mt-5 text-xl font-bold text-brand-black">
                            {service.title}
                        </h3>
                        <p class="mt-2 text-base text-gray-500">
                            {service.description}
                        </p>
                    </div>
                ))
            }
        </div>
    </div>
</section>
