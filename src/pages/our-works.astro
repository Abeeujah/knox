---
import Layout from "../layouts/Layout.astro";
import Header from "../components/Header.astro";
import Initiatives from "../components/Initiatives.astro";
import Footer from "../components/Footer.astro";

const projects = [
    {
        image: "/ayo.png",
        title: "Football Tournament",
        date: "October 2023",
        description:
            "Sophomore edition of the annual football tournament organized by the foundation to promote and support budding talents in our society.",
    },
    {
        image: "orphanage.png",
        title: "Charity Donations",
        date: "October 30th 2023",
        description:
            "With acts of kindness and generosity, we have the power to create a lasting impact on the lives of individuals and communities, inspiring hope and meaningful change.",
    },
    {
        image: "waterandfood.png",
        title: "Charity Donations",
        date: "October 30th 2022",
        description:
            "With acts of kindness and generosity, we have the power to create a lasting impact on the lives of individuals and communities, inspiring hope and meaningful change.",
    },
    {
        image: "redknapp.png",
        title: "Football Tournament",
        date: "October 2021",
        description:
            "Genesis edition of the annual football tournament organized by the foundation to promote and support budding talents in our society.",
    },
];

const features = [
    {
        title: "Quality Education",
        description:
            "We've provided education and scholarships to underprivileged children, empowering them to break the cycle of poverty.",
    },
    {
        title: "Naskaxe Charity",
        description:
            "Through Naskaxe Charity, we provide essential resources and support to uplift communities in need.",
    },
    {
        title: "Young Footballers Empowerment",
        description:
            "Our Young Footballers Empowerment program offers young talent not just athletic training but also mentorship and life skills.",
    },
];
---

<Layout title="Our Works - Naskaxe Humanitarian Foundation">
    <Header activePage="Our Work" />
    <main>
        <!-- Hero Section -->
        <section
            class="relative overflow-hidden bg-brand-black pt-32 pb-15 md:pt-40 md:pb-30"
        >
            <div
                class="pointer-events-none absolute inset-0 hero-pattern"
                aria-hidden="true"
            >
            </div>

            <div class="relative mx-auto max-w-300 px-6">
                <div class="grid items-center gap-12 lg:grid-cols-2 lg:gap-16">
                    <!-- Left Column -->
                    <div>
                        <span
                            class="text-xs font-semibold uppercase tracking-widest text-brand-red"
                        >
                            Our Works
                        </span>
                        <h1
                            class="mt-4 text-4xl font-bold leading-tight text-white md:text-[52px] md:leading-[1.15]"
                        >
                            Together, We Change Lives
                        </h1>
                        <p
                            class="mt-5 text-base leading-relaxed text-gray-300 md:text-lg"
                        >
                            Over the years, Naskaxe has made significant impact
                            in empowering communities and transforming lives
                            through dedicated programs and initiatives.
                        </p>

                        <div class="mt-10 flex flex-col gap-8">
                            {
                                features.map((item) => (
                                    <div class="flex items-start gap-4">
                                        <div class="flex h-8 w-8 shrink-0 items-center justify-center rounded-full bg-brand-red mt-0.5">
                                            <svg
                                                xmlns="http://www.w3.org/2000/svg"
                                                width="24"
                                                height="24"
                                                viewBox="0 0 24 24"
                                                fill="none"
                                            >
                                                <g clip-path="url(#clip0_115_700)">
                                                    <path
                                                        d="M8.25 12.75L10.5 15L15.75 9.75"
                                                        stroke="#EDEDED"
                                                        stroke-width="1.6"
                                                        stroke-linecap="round"
                                                        stroke-linejoin="round"
                                                    />
                                                    <path
                                                        d="M12 21C16.9706 21 21 16.9706 21 12C21 7.02944 16.9706 3 12 3C7.02944 3 3 7.02944 3 12C3 16.9706 7.02944 21 12 21Z"
                                                        stroke="#EDEDED"
                                                        stroke-width="1.6"
                                                        stroke-linecap="round"
                                                        stroke-linejoin="round"
                                                    />
                                                </g>
                                                <defs>
                                                    <clipPath id="clip0_115_700">
                                                        <rect
                                                            width="24"
                                                            height="24"
                                                            fill="white"
                                                        />
                                                    </clipPath>
                                                </defs>
                                            </svg>
                                        </div>
                                        <div class="my-0">
                                            <h3 class="text-base font-bold text-white mt-0">
                                                {item.title}
                                            </h3>
                                            <p class="mt-1 text-sm leading-relaxed text-gray-300">
                                                {item.description}
                                            </p>
                                        </div>
                                    </div>
                                ))
                            }
                        </div>
                    </div>

                    <!-- Right Column: Masonry Grid -->
                    <div class="flex flex-col gap-4">
                        <img
                            class="w-full h-auto object-cover max-w-full"
                            src="/orphanage.png"
                            alt="Orphanage Visit"
                        />
                        <div class="grid grid-cols-2 gap-4">
                            <img
                                class="w-full h-auto object-cover max-w-full"
                                src="/tournament.png"
                                alt="Naskaxe football tournament"
                            />
                            <img
                                class="w-full h-auto object-cover max-w-full"
                                src="/classroom.png"
                                alt="Child in Classroom"
                            />
                        </div>
                    </div>
                </div>
            </div>
        </section>

        <!-- Project Feed Section -->
        <section class="bg-white py-15 md:py-30">
            <div class="mx-auto max-w-300 px-6">
                <div class="grid gap-8 sm:grid-cols-2">
                    {
                        projects.map((project) => (
                            <div class="flex flex-col gap-5">
                                <div class="relative overflow-hidden rounded-xl aspect-video">
                                    <img
                                        class="absolute inset-0 w-full h-full object-cover"
                                        src={project.image}
                                        alt={project.title}
                                    />
                                    <div class="absolute inset-x-0 bottom-0 flex items-center justify-between bg-black/50 px-4 py-2.5 backdrop-blur-sm">
                                        <span class="text-xs text-white">
                                            {project.date}
                                        </span>
                                        <span class="text-xs text-white">
                                            Naskaxe Foundation
                                        </span>
                                    </div>
                                </div>
                                <div>
                                    <h3 class="text-xl font-bold text-brand-black md:text-2xl">
                                        {project.title}
                                    </h3>
                                    <p class="mt-2 text-base leading-relaxed text-gray-text">
                                        {project.description}
                                    </p>
                                    <a
                                        href="#"
                                        class="mt-3 inline-flex items-center gap-1 text-sm font-semibold text-brand-red transition-opacity hover:opacity-80"
                                    >
                                        Read More â†—
                                    </a>
                                </div>
                            </div>
                        ))
                    }
                </div>
            </div>
        </section>

        <!-- Initiatives Section -->
        <Initiatives />
    </main>
    <Footer />
</Layout>

<style>
    .hero-pattern::before,
    .hero-pattern::after {
        content: "";
        position: absolute;
        border: 1px solid rgba(255, 255, 255, 0.04);
        border-radius: 50%;
    }

    .hero-pattern::before {
        width: 600px;
        height: 600px;
        top: -200px;
        right: -150px;
    }

    .hero-pattern::after {
        width: 400px;
        height: 400px;
        bottom: -100px;
        left: -100px;
    }
</style>
